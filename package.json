{
    "name": "sublime-mavensmate-monokai-apex",
    "displayName": "Sublime MavensMate Monokai for Apex",
    "description": "Theme to replicate the workbench and syntax highlighting from Sublime Text 3 with MavensMate when editing Apex code.  This is as close as possible with some subtle differences.  This theme references the Salesforce grammar (apex.tmLanguage) in the Salesforce Extension Pack for VSCode.",
    "version": "0.0.6",
    "publisher": "SubC4i",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "sublime monokai",
        "monokai",
        "mavensmate",
        "apex",
        "salesforce"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Sublime MavensMate Monokai",
                "uiTheme": "vs-dark",
                "path": "./themes/Sublime MavensMate Monokai-color-theme.json"
            }
        ],
        "contributes": {
            "configurationDefaults": {
                "[apex]": {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[visualforce]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[plaintext]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[json]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[jsonc]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[xml]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                },
                "[markdown]" : {
                    "editor.wordWrap": "on",
                    "editor.renderWhitespace": "selection"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SubC4i/Sublime-MavensMate-Monokai.git"
      }
}